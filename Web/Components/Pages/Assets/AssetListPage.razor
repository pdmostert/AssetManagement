@page "/assets"
<h3>Asset List Page</h3>

@if (loading)
{
    <h1>Loading ....</h1>
}
else
{

    <div class="mb-3">

        <button class="btn btn-primary" @onclick="AddAsset">Add Asset</button>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Category</th>
                <th>SubCategory</th>
                <th>Make</th>
                <th>Model</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Assets)
            {
                <tr class="p-2">
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Category</td>
                    <td>@item.SubCategory</td>
                    <td>@item.Make</td>
                    <td>@item.Model</td>
                    <td>
                        <button class="btn btn-primary" @onclick="() => EditAsset(item)">Edit</button>
                        <button class="btn btn-danger" @onclick="() => DeleteAsset(item)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}





