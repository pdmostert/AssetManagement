@page "/asset-owner-add"
<h3>Asset Owner Add Page</h3>


<EditForm Model="@AssetOwner" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="FullName">Full Name</label>
        <InputText id="Name" class="form-control" @bind-Value="AssetOwner.FullName" />
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <InputText id="Email" class="form-control" @bind-Value="AssetOwner.Email" />
    </div>

    <div class="form-group">
        <label for="PhoneNumber">Phone Number</label>
        <InputText id="PhoneNumber" class="form-control" @bind-Value="AssetOwner.PhoneNumber" />
    </div>

    <div class="form-group">
        <label for="Department">Department</label>
        <InputText id="Department" class="form-control" @bind-Value="AssetOwner.Department" />
    </div>


    <div class="my-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <button class="btn btn-danger" @onclick="Cancel">Cancel</button>
    </div>

</EditForm>